<?php

namespace Workbench\App\Providers;

use Illuminate\Support\ServiceProvider;

class AppServiceProvider extends ServiceProvider
{
    /**
     * Register services.
     */
    public function register(): void
    {
        //
    }

    /**
     * Bootstrap services.
     */
    public function boot(): void
    {
        //
        $this->configureModels();
        $this->configureDates();
        $this->configureCommands();
        $this->configureHttpScheme();
        $this->configureAssetPrefetching();
    }

    /**
     * Configure the models.
     */
    private function configureModels(): void
    {
        \Illuminate\Database\Eloquent\Model::shouldBeStrict(app()->isProduction());
        \Illuminate\Database\Eloquent\Model::automaticallyEagerLoadRelationships(! app()->isProduction());
        \Illuminate\Database\Eloquent\Model::unguard();
    }

    /**
     * Configure the dates.
     */
    private function configureDates(): void
    {
        \Illuminate\Support\Facades\Date::use(\Carbon\CarbonImmutable::class);
    }

    /**
     * Configure the application's commands.
     */
    private function configureCommands(): void
    {
        \Illuminate\Support\Facades\DB::prohibitDestructiveCommands(app()->isProduction());
    }

    /**
     * Configure the HTTP scheme.
     */
    private function configureHttpScheme(): void
    {
        if (app()->isProduction()) {
            \Illuminate\Support\Facades\URL::forceScheme('https');
        }
    }

    /**
     * Configure asset prefetching.
     */
    private function configureAssetPrefetching(): void
    {
        \Illuminate\Support\Facades\Vite::prefetch(concurrency: 3);
    }
}
